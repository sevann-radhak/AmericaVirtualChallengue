@model AmericaVirtualChallengue.Web.Models.ModelsView.OrderViewModel

@{
    ViewData["Title"] = "Details";
}


<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />




<div class="col-6">
    <h2>Order @Model.Id</h2>
    <h4>@Model.OrderDate </h4>
</div>
<div class="col-6" style="text-align: right">
    <span style="font-weight: bold">@Model.User.UserName</span>
</div>



<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Products</h3>
            </div>
            <div class="panel-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <table class="table table-hover table-responsive table-striped" id="ProductsTable">
                    <thead>
                        <tr>
                            <th>
                            </th>
                            <th>
                            </th>
                            <th>

                            </th>
                            <th>
                                Total:  <span style="font-weight: bold">@Model.Value</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <span style="font-weight: bold">@Html.DisplayFor(modelItem => item.Product.Name)</span>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Value)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#ProductsTable').DataTable();
        });
    </script>
}